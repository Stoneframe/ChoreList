<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_chore"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="stoneframe.chorelist.gui.FortnightRoutineActivity">

    <LinearLayout
        android:id="@+id/routine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name" />

        <EditText
            android:id="@+id/fortnight_routine_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date" />

        <EditText
            android:id="@+id/fortnight_routine_start_date_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Procedures" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--Week 1-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:scrollbars="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#0000FF"
                            android:paddingTop="10dp"
                            android:text="Week 1"
                            android:textColor="#FFFFFF"
                            android:textSize="30dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:text="Monday"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp" />

                            <ListView
                                android:id="@+id/procedures_monday_week1"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:scrollbars="none" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:text="Tuesday"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp" />

                            <ListView
                                android:id="@+id/procedures_tuesday_week1"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:scrollbars="none" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:text="Wednesday"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp" />

                            <ListView
                                android:id="@+id/procedures_wednesday_week1"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:scrollbars="none" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:text="Thursday"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp" />

                            <ListView
                                android:id="@+id/procedures_thursday_week1"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:scrollbars="none" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:text="Friday"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp" />

                            <ListView
                                android:id="@+id/procedures_friday_week1"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:scrollbars="none" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:text="Saturday"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp" />

                            <ListView
                                android:id="@+id/procedures_saturday_week1"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:scrollbars="none" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:text="Sunday"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp" />

                            <ListView
                                android:id="@+id/procedures_sunday_week1"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:scrollbars="none" />
                        </LinearLayout>

                    </LinearLayout>

                    <!--Week 2-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:scrollbars="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#0000FF"
                            android:paddingTop="10dp"
                            android:text="Week 2"
                            android:textColor="#FFFFFF"
                            android:textSize="30dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:text="Monday"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp" />

                            <ListView
                                android:id="@+id/procedures_monday_week2"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:scrollbars="none" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:text="Tuesday"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp" />

                            <ListView
                                android:id="@+id/procedures_tuesday_week2"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:scrollbars="none" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:text="Wednesday"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp" />

                            <ListView
                                android:id="@+id/procedures_wednesday_week2"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:scrollbars="none" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:text="Thursday"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp" />

                            <ListView
                                android:id="@+id/procedures_thursday_week2"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:scrollbars="none" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:text="Friday"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp" />

                            <ListView
                                android:id="@+id/procedures_friday_week2"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:scrollbars="none" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:text="Saturday"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp" />

                            <ListView
                                android:id="@+id/procedures_saturday_week2"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:scrollbars="none" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:text="Sunday"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp" />

                            <ListView
                                android:id="@+id/procedures_sunday_week2"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:scrollbars="none" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="0"
                android:background="#FFFF66"
                android:layoutDirection="ltr"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Week:" />

                    <Spinner
                        android:id="@+id/week_procedure_week"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Week day:" />

                    <Spinner
                        android:id="@+id/week_procedure_day_of_week"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time:" />

                    <EditText
                        android:id="@+id/week_procedure_time"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:inputType="time"
                        android:text="00:00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description:" />

                    <EditText
                        android:id="@+id/week_procedure_description"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:onClick="addProcedureClick"
                        android:text="ADD" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/removeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:onClick="removeClick"
        android:text="REMOVE" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="saveClick"
        android:text="DONE" />

</RelativeLayout>
