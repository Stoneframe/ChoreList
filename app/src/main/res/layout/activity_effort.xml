<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_effort"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="stoneframe.chorelist.gui.EffortActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow>

            <TextView android:text="Monday" />

            <EditText
                android:id="@+id/mondayEditText"
                android:layout_width="50dp"
                android:inputType="number" />
        </TableRow>

        <TableRow>

            <TextView android:text="Tuesday" />

            <EditText
                android:id="@+id/tuesdayEditText"
                android:layout_width="50dp"
                android:inputType="number" />
        </TableRow>

        <TableRow>

            <TextView android:text="Wednesday" />

            <EditText
                android:id="@+id/wednesdayEditText"
                android:layout_width="50dp"
                android:inputType="number" />
        </TableRow>

        <TableRow>

            <TextView android:text="Thursday" />

            <EditText
                android:id="@+id/thursdayEditText"
                android:layout_width="50dp"
                android:inputType="number" />
        </TableRow>

        <TableRow>

            <TextView android:text="Friday" />

            <EditText
                android:id="@+id/fridayEditText"
                android:layout_width="50dp"
                android:inputType="number" />
        </TableRow>

        <TableRow>

            <TextView android:text="Saturday" />

            <EditText
                android:id="@+id/saturdayEditText"
                android:layout_width="50dp"
                android:inputType="number" />
        </TableRow>

        <TableRow>

            <TextView android:text="Sunday" />

            <EditText
                android:id="@+id/sundayEditText"
                android:layout_width="50dp"
                android:inputType="number" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/effort_per_week_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="onCancelClick"
        android:text="Cancel" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/cancelButton"
        android:onClick="onOkClick"
        android:text="OK" />

</RelativeLayout>
