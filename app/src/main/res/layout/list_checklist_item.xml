<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/arrowRight"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_right"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/editImage"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="-10dp"
        android:layout_toEndOf="@id/arrowRight"
        android:src="@drawable/ic_edit"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:layout_toStartOf="@id/dragHandle"
        android:layout_toEndOf="@id/editImage"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/dragHandle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_drag_handle"
        android:layout_toStartOf="@id/deleteImage"
        android:layout_marginEnd="15dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/deleteImage"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/arrowLeft"
        android:src="@drawable/ic_delete_filled"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_marginStart="-10dp"
        android:id="@+id/arrowLeft"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_left"
        tools:ignore="ContentDescription" />

</RelativeLayout>